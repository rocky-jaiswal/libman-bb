= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :author
    %br/
    = f.text_field :author
  .field
    = f.label :isbn
    %br/
    = f.text_field :isbn
  .field
    = f.label :publication_date
    %br/
    = f.date_select :publication_date
  .field
    = f.label :tags
    %br/
    = f.text_field :tags
  .actions
    = f.submit
